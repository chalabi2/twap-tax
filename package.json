{
  "name": "twap-tax",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --env-file .env src/server.ts",
    "etl:day": "bun run --env-file .env src/etl/run_day.ts",
    "etl:daily": "bun run --env-file .env src/etl/run_daily.ts",
    "migrate": "bun run --env-file .env src/db/migrate.ts",
    "build": "bun run build:api && bun run build:etl",
    "build:api": "bun build --target bun ./src/server.ts --outdir dist",
    "build:etl": "bun build --target bun ./src/etl/run_day.ts ./src/etl/run_daily.ts --outdir dist/etl",
    "start": "bun run --env-file .env dist/server.js",
    "etl:daily:built": "bun run --env-file .env dist/etl/run_daily.js",
    "etl:day:built": "bun run --env-file .env dist/etl/run_day.js",
    "format": "bash -c 'prettier -w . || true'"
  },
  "dependencies": {
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/pg": "^8.11.6",
    "typescript": "^5.6.3"
  }
}
